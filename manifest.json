{
  "name": "r/random",
  "description": "This extension loads r/random from Reddit.",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": ["activeTab"],
  "browser_action": {
      "default_icon": {
        "19": "icon19.png",
        "38": "icon38.png"
      },
      "default_title": "r/random"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  }
}